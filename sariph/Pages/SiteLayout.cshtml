<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <link rel="shortcut icon" href="@Url.Content("~/images/Favicon.ico")" />
    <meta name="application-name" content="Sariph.net" />

    <link rel="stylesheet" href="@Url.Content("~/css/theme.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/layout.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/ui.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/animation.css")" />

    <script src="@Url.Content("~/js/compat.js")"></script>
    <script src="@Url.Content("~/js/util.js")"></script>
    <script src="@Url.Content("~/js/animation.js")"></script>
    <script src="@Url.Content("~/js/site.js")"></script>

    <!--[if lte IE 8]>
    <link rel="stylesheet" href="@Url.Content("~/css/ie8.css")" />
    <script src="@Url.Content("~/js/ie8.js")"></script>
    <![endif]-->
</head>
<body onload="Site.init();">
    <header>
        <hgroup>
            <h1 id="name">Steven Fuqua</h1>
            <h2 id="occupation">IE SDET, Microsoft</h2>
        </hgroup>
    </header>

    <div id="content-frame">
        @RenderBody()
    </div>

    <footer>
        <div id="compat">
            <h1>Site compatibility report</h1>
            This page uses JavaScript to provide an optimal experience. Please consider enabling it.
        </div>
        <script>
            var compat = document.getElementById('compat');
            compat.parentNode.removeChild(compat);
        </script>
    </footer>
</body>
</html>
